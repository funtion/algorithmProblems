#include <iostream>
#include <cstring>
using namespace std;
int n;
char s[200],ans[200];
int main()
{
    cin>>n>>s;
    int len = strlen(s);
    bool ok = true;
    for(int i=0,j=len-1;i<=j;i++,j--){
        if(s[i] == s[j] ){
            if(s[i]!='?')
                ans[i] = ans[j];
            else
                ans[i] = ans[j] = 'a';
        }else{
            if(s[i] == '?'){
                ans[i] = ans[j] = s[j];
            }else if(s[j] == '?'){
                ans[i] = ans[j] = s[i];
            }else{
                ok = false;
                break;
            }
        }
    }
    if(ok){
        cout<<ans<<endl;
    }else{
        cout<<"IMPOSSIBLE\n";
    }

    return 0;
}